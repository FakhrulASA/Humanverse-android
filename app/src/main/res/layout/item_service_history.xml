<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="10dp"
        android:layout_marginHorizontal="5dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="2.5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_service_ongoing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/capriola"
                android:gravity="center"
                android:padding="20dp"
                android:background="#9A44A8"
                android:text="Steve car wash"
                android:textColor="@color/white"
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                app:layout_constraintTop_toBottomOf="@+id/title_service_ongoing">

                <TextView
                    android:id="@+id/date_service_ongoing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Date : 20/20/10, 20:00"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_service_ongoing" />

                <TextView
                    android:id="@+id/cost_service_ongoing"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Cost: 400$"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    app:layout_constraintEnd_toStartOf="@+id/textView42"
                    app:layout_constraintStart_toEndOf="@+id/date_service_ongoing"
                    app:layout_constraintTop_toBottomOf="@+id/title_service_ongoing" />

            </LinearLayout>

            <TextView
                android:id="@+id/service_service_ongoing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Completed"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/capriola"
                android:textColor="@color/green"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>